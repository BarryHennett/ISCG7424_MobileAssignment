<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/supplierprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupplierProfile">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:stretchColumns="1"
        >

            <ImageButton
                android:id="@+id/imgbtnbrsdls"
                android:src="@drawable/dailydealslogo"
                android:backgroundTint="@color/white"

                tools:ignore="HardcodedText"
                android:onClick="gohomepge"

                android:paddingBottom="20dp"/>

        <TableRow
            android:paddingBottom="20dp">
            <TextView
                android:textSize="30dp"
                android:text="First Name: Harry"/>
        </TableRow>
        <TableRow
            android:paddingBottom="20dp">
            <TextView
                android:textSize="30dp"
                android:text="Last Name: Bennett"/>
        </TableRow>
        <TableRow
            android:paddingBottom="20dp">
            <TextView
                android:textSize="30dp"
                android:text="Company Name: Proteine"/>
        </TableRow>
        <TableRow
            android:paddingBottom="20dp">
            <TextView
                android:textSize="30dp"
                android:text="Email: Harry@gmail.com"/>
        </TableRow>

        <Button
            android:id="@+id/addnewactivity"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:onClick="GoNewActivity"
            android:text="Add New Activity"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_supplier_view">
        </androidx.recyclerview.widget.RecyclerView>
    </TableLayout>
</RelativeLayout>