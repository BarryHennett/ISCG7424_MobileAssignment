<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customerregister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerRegister">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:stretchColumns="1">

            <ImageButton
                android:id="@+id/imgbtnbrsdls"
                android:layout_column="0"
                android:src="@drawable/dailydealslogo"
                android:backgroundTint="@color/white"

                tools:ignore="HardcodedText"
                android:onClick="gohomepge"/>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/gocusregbtn"
                android:text="Customer"
                android:onClick="GoCusReg"
                tools:ignore="HardcodedText"

                />

            <Button
                android:id="@+id/gosupregbtn"
                android:text="Supplier"
                android:onClick="GoSupReg"
                tools:ignore="HardcodedText"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/goadminregbtn"
                android:text="Administration"
                android:onClick="GoAdminReg"
                tools:ignore="HardcodedText"
                android:layout_gravity="end"

                />
        </TableRow>
        <TableRow
            android:paddingTop="30dp">
            <EditText
                android:id="@+id/cusfnameinput"
                android:hint="First Name"
                 />

            <EditText
                android:id="@+id/cuslnameinput"
                android:hint="Last Name"
                android:inputType="text"
                android:layout_column="2"/>

        </TableRow>


        <EditText
            android:paddingTop="60dp"
            android:id="@+id/cusemailinput"
            android:hint="Email Input"
 />


        <EditText
            android:paddingTop="60dp"
            android:id="@+id/cuspasswordinput"
            android:hint="Password Input"
 />

            <Button
                android:paddingTop="10dp"
                android:text="Register"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/registercusbtn"/>

        <Button
            android:id="@+id/LoginInsteadBtn"
            android:text="Login Instead"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            />
    </TableLayout>
</RelativeLayout>