<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminlogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin"
    android:background="@color/Lblue">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:stretchColumns="1">

            <ImageButton
                android:id="@+id/imgbtnbrsdls"
                android:layout_column="0"
                android:src="@drawable/dailydealslogo"
                android:backgroundTint="@color/Lblue"

                tools:ignore="HardcodedText"
                android:onClick="gohomepge"/>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
        android:backgroundTint="@color/Lorange"
                            android:id="@+id/cuslgnbtn"
                android:text="Customer"
                android:onClick="GoCusLogin"
                tools:ignore="HardcodedText"

                />

            <Button
        android:backgroundTint="@color/Lorange"
                            android:id="@+id/cussupbtn"
                android:text="Supplier"
                android:onClick="GoSupLoginbtn"
                tools:ignore="HardcodedText"
                android:layout_gravity="center"

                />

            <Button
        android:backgroundTint="@color/Lorange"
                            android:id="@+id/cusadmlgnbtn"
                android:text="Administration"
                android:onClick="GoAdminLogin"
                tools:ignore="HardcodedText"
                android:layout_gravity="end"

                />
        </TableRow>

        <EditText
            android:paddingTop="60dp"
            android:hint="Admin Key Input"
            tools:ignore="HardcodedText"
            android:id="@+id/admkeylgn"
            android:fontFamily="@font/fontmon"
            />


        <EditText
            android:paddingTop="60dp"
            android:hint="Email Input"
            tools:ignore="HardcodedText"
            android:id="@+id/adminemaillgn"
            android:fontFamily="@font/fontmon"
            />

        <EditText
            android:paddingTop="60dp"
            android:hint="Password Input"
            tools:ignore="HardcodedText"
            android:id="@+id/admpwordlgn"
            android:fontFamily="@font/fontmon"
            />


        <TableRow
            android:paddingTop="60dp">
            <Button
        android:backgroundTint="@color/Lorange"
                            android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/adminlogbtn"
                android:onClick="login"
                />

            <Button
        android:backgroundTint="@color/Lorange"
                            android:id="@+id/admregisterInsteadBtn"
                android:text="Register Instead"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_column="2"

                />
        </TableRow>

    </TableLayout>


</RelativeLayout>