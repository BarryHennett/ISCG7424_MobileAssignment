<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@color/Lblue"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@android:color/transparent"
        android:stretchColumns="1"
        >

        <TableRow
            android:layout_width="396dp"
            android:layout_height="81dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
        android:backgroundTint="@color/Lorange"
            
                android:id="@+id/buttonLogin"
                android:onClick="GoCusLogin"
                android:layout_column="2"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Login"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
        android:backgroundTint="@color/Lorange"
            
                android:id="@+id/aklcatbtn"
                android:onClick="GoAklCtg"
                android:text="Auckland"
                tools:ignore="HardcodedText" />

            <Button
        android:backgroundTint="@color/Lorange"
            
                android:id="@+id/welcatbtn"
                android:layout_gravity="center"
                android:onClick="GoWelCtg"
                android:text="Wellington"
                tools:ignore="HardcodedText" />

            <Button
        android:backgroundTint="@color/Lorange"
            
                android:id="@+id/quecatbtn"
                android:layout_gravity="end"
                android:onClick="GoQueCtg"
                android:text="Queenstown"
                tools:ignore="HardcodedText" />
        </TableRow>


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textInputLayout"
            >

            <AutoCompleteTextView
                android:id="@+id/CtgDrpDwnHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:hint="Select Category"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
        android:backgroundTint="@color/Lorange"
            
            android:id="@+id/amzdlsbtn"
            android:layout_gravity="center"
            android:onClick="goamzdls"
            android:text="Amazing Deals!"
            tools:ignore="HardcodedText" />

            <ImageButton
                android:backgroundTint="@color/Lblue"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/rafting2"
                tools:ignore="HardcodedText"
                android:contentDescription="image"/>

            <ImageButton
                android:backgroundTint="@color/Lblue"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"

                android:src="@drawable/rockclimbing2"
                tools:ignore="HardcodedText"
                android:contentDescription="image"/>

            <ImageButton
                android:backgroundTint="@color/Lblue"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="15dp"

                android:src="@drawable/snowboarding2"
                tools:ignore="HardcodedText"
                android:contentDescription="image"/>

    </TableLayout>
</ScrollView>