<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:stretchColumns="1"
        android:layout_marginStart="10dp"

        >
        <TableRow>

            <Button
                android:layout_width="100dp"
                android:id="@+id/imgbtnbrsdls"
                android:layout_column="0"
                android:text="Home"
                tools:ignore="HardcodedText"
                android:onClick="gohomepge"
                />

            <Button
                android:id="@+id/supprf"
                android:layout_column="2"
                android:layout_marginEnd="10dp"
                android:onClick="GoCusLogin"
                android:text="Profile"
                tools:ignore="HardcodedText" />
        </TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Name"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_column="1"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Location"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_column="1"
                />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <AutoCompleteTextView
                android:id="@+id/LCTDrpDwnAN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text="Select Location"
                />
        </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Category"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_column="1"
                />
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtinptctgdrpdwnan"
            >

            <AutoCompleteTextView
                android:id="@+id/CtgDrpDwnAN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:text="Select Category"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Pricing"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_column="1"
                />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Description"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_column="1"
                />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            />

        <Button
            android:text="Submit Activity"
            android:textSize="25sp"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </TableLayout>
</ScrollView>