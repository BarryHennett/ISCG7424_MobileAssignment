<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adminprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminProfile"
    android:background="@color/Lblue">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:stretchColumns="1"
        >

            <ImageButton
                android:id="@+id/imgbtnbrsdls"
                android:src="@drawable/dailydealslogo"
                android:backgroundTint="@color/Lblue"
                tools:ignore="HardcodedText"
                android:onClick="gohomepge"
                android:paddingBottom="20dp"/>


            <TextView
                android:fontFamily="@font/fontmon"

                android:textSize="30dp"
                android:paddingBottom="20dp"
                android:text="First Name: Harry"/>

            <TextView
                android:fontFamily="@font/fontmon"

                android:textSize="30dp"
                android:paddingBottom="20dp"

                android:text="Last Name: Bennett"/>
            <TextView
                android:textSize="30dp"
                android:paddingBottom="20dp"
                android:fontFamily="@font/fontmon"

                android:text="Email: Harry@gmail.com"/>

        <TableRow
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
        android:backgroundTint="@color/Lorange"
            

                android:id="@+id/customerdtls"
                android:onClick="customerdtls"
                android:text="Customer Dtls"
                tools:ignore="HardcodedText" />



            <Button
        android:backgroundTint="@color/Lorange"
            

                android:id="@+id/supplierdtls"
                android:layout_gravity="end"
                android:onClick="supplierdtls"
                android:text="Supplier DTLS"
                tools:ignore="HardcodedText" />

        </TableRow>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_admin_view"
            android:fontFamily="@font/fontmon"
            >
        </androidx.recyclerview.widget.RecyclerView>
    </TableLayout>
</RelativeLayout>